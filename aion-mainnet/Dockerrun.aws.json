 {
  "AWSEBDockerrunVersion": 2,

    "volumes": [

     {
       "name": "aion-mainnet-vol",
       "host": {
         "sourcePath": "/var/app/mainnet"
       }
     },

     {
       "name": "node-exporter-proc",
       "host": {
         "sourcePath": "/proc"
       }
     },
     {
       "name": "node-exporter-sys",
       "host": {
         "sourcePath": "/sys"
       }
     },
     {
       "name": "node-exporter-rootfs",
       "host": {
         "sourcePath": "/"
       }
     }
   ],

   "containerDefinitions": [
   {

     "image": "poktnetwork/aion",
     "name": "aion-mainnet",
     "essential": true,

     "mountPoints": [
       {
         "sourceVolume": "aion-mainnet-vol",
         "containerPath": "/opt/aion/mainnet"

       }
     ],

     "portMappings": [
       {
         "hostPort": 80,
         "containerPort": 8545
       },
       {
         "containerPort": 8547
       },
       {
         "containerPort": 30303
       }
     ],
     "memory": 10240,
     "cpu": 2048,
     "Logging": "/var/log/aion"
   },

   {

     "image": "prom/node-exporter:v0.15.0",
     "name": "node-exporter",
     "essential": true,

     "mountPoints": [
       {
         "sourceVolume": "node-exporter-proc",
         "containerPath": "/host/proc",
         "readOnly": true
       },
       {
         "sourceVolume": "node-exporter-sys",
         "containerPath": "/host/sys",
         "readOnly": true
       },
       {
         "sourceVolume": "node-exporter-rootfs",
         "containerPath": "/rootfs",
         "readOnly": true
       }

     ],

     "Ports": [
       {
         "ContainerPort": "9100"
       }
     ],
     "memory": 1024,
     "cpu": 128,
     "Logging": "/var/log/node-exporter"
   }


  ]
}
